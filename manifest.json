{
     "name": "UVM Auto-Registration",
     "version": "1.0",
     "description": "Allows for the auto-registration of classes at the University of Vermont.",
     "icons": { "16": "./icons/icon16.png",
                "48": "./icons/icon48.png",
                "128": "./icons/icon128.png" },
     "permissions": ["storage", "tabs","activeTab","notifications","http://*/","https://*/"],
     "browser_action": {
          "default_popup": "popup.html"
     },
     "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
     "content_scripts": [
       {
         "matches": ["http://*.uvm.edu/*","https://*.uvm.edu/*"],
         "js": ["tabDriver.js"]
       }
     ],
     "manifest_version": 2
}
